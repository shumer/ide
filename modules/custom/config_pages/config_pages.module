<?php
define('CONFIG_PAGES_ENTITY_TYPE', 'config_pages');

use Drupal\config_pages\Entity\ConfigPages;

/**
 * @param \Drupal\Core\Entity\EntityInterface $entity
 *
 * Implements hook_entity_insert
 */
function config_pages_entity_insert(\Drupal\Core\Entity\EntityInterface $entity) {
  if (CONFIG_PAGES_ENTITY_TYPE == $entity->getEntityTypeId()){
    $configPage= ConfigPages::create([
      'id' => NULL,
      'revision_id' => NULL,
      'type' => $entity->id(),
      'info' => $entity->label(),
      'langcode' => 'en',
    ])->save();
  }
}